---
export interface Props {
  title: string;
  publisher: string;
  date: string;
  href: string;
}

const { title, publisher, date, href } = Astro.props;
---

<div class="m-5">
  <h3 class="text-2xl text-center italic">{title}</h3>
  <div class="text-center text-white text-xs">{publisher}</div>
  <div class="text-center text-white text-xs">{date}</div>
  <a href={href}><div class="border text-center mt-3">DETAILS</div></a>
</div>
